/* components/search.wxss */
.search {
  width: 100%;
  height: 75rpx;
  background: linear-gradient(90deg, #fe8e01, #f54102);
  font-size: 14px;
  padding: 0 20rpx;
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
  align-items: center;
}

.search-form {
  margin-left: 7rpx;
  font-size: 22rpx;
  color: #949494;
  border: 1px solid #949494;
}

.search-control {
  padding-left: 29rpx;
  width: 495rpx;
  height: 34rpx;
  line-height: 34rpx;
  background-color: #fff;
}

.search-icon {
  margin-left: 35rpx;
}

.search-img {
  width: 40rpx;
  height: 40rpx;
}

.search-img image {
  width: 100%;
  height: 100%;
}